<Page
    x:Class="Assignment1.calc_BMI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assignment1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="860" Height="645">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='2' x:Name="btn_Home" Content="Home" Margin="0,96,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24"                        Grid.Row="1"/>
        <Button x:ConnectionId='3' x:Name="btn_Tip" Content="Tip" HorizontalAlignment="Center" FontSize="24"                       Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,180,0,0" TextWrapping="Wrap" Text="BMI" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Grid.RowSpan="2"/>
        <TextBox x:ConnectionId='4' x:Name="txt_Height" HorizontalAlignment="Left" Margin="220,25,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Height (cm)" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='5' x:Name="txt_Weight" HorizontalAlignment="Center" Margin="0,25,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Weight (kg)" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='6' x:Name="out_BMI" HorizontalAlignment="Left" Margin="617,32,0,0" Grid.Row="1" TextWrapping="Wrap" Text="BMI = " VerticalAlignment="Top"/>
        <Button x:ConnectionId='7' x:Name="btn_Submit" Content="Submit" Margin="508,25,0,0" Grid.Row="1" VerticalAlignment="Top"                         />

    </Grid>
</Page>

