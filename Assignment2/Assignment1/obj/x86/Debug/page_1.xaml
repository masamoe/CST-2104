<Page
    x:Class="Assignment1.page_1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assignment1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="860" Height="645">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='2' x:Name="btn_Home" Content="Home" Margin="0,234,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24"                        Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,180,0,0" TextWrapping="Wrap" Text="Page 1" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Grid.RowSpan="2"/>
        <TextBox x:ConnectionId='3' x:Name="txt_name" HorizontalAlignment="Left" Margin="220,25,0,0" Grid.Row="1" TextWrapping="Wrap" Text="(NAME)" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='4' x:Name="txt_phone" HorizontalAlignment="Center" Margin="0,25,0,0" Grid.Row="1" TextWrapping="Wrap" Text="(PHONE)" VerticalAlignment="Top"/>
        <Button x:ConnectionId='5' x:Name="btn_Submit" Content="Submit" Margin="0,157,0,0" Grid.Row="1" VerticalAlignment="Top"                          HorizontalAlignment="Center"/>
        <TextBox x:ConnectionId='6' x:Name="txt_address" HorizontalAlignment="Left" Margin="559,25,0,0" Grid.Row="1" TextWrapping="Wrap" Text="(ADDRESS)" VerticalAlignment="Top"/>
        <ComboBox Margin="255,98,0,0" Grid.Row="1" Width="120">
            <CheckBox Content="Music"/>
            <CheckBox Content="Reading"/>
            <CheckBox Content="Painting"/>
            <CheckBox Content="Sports"/>
        </ComboBox>
        <ComboBox Margin="484,93,0,0" Grid.Row="1" Width="120">
            <ComboBoxItem Content="Vancouver"/>
            <ComboBoxItem Content="Richmond"/>
            <ComboBoxItem Content="Surrey"/>
            <ComboBoxItem Content="Burnaby"/>
        </ComboBox>

    </Grid>
</Page>

