<Page
    x:Class="Assignment1.page_2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assignment1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="860" Height="645">

    <Grid>
        <Button x:Name="btn_Home" Content="Home" Margin="0,579,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24" Click="btn_Home_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Page 2" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <Canvas Width="640" Height="480" KeyDown="Canvas_MouseDown_1" PointerMoved="Canvas_MouseMove_1" >
            <Rectangle Canvas.Left="30" Canvas.Top="30" Fill="Red" Width="200" Height="200" />
            <Ellipse Canvas.Left="300" Canvas.Top="50" Fill="Blue" Width="200" Height="200" />
        </Canvas>

    </Grid>
</Page>
